{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Nexus Downloader",
  "version": "0.1.0",
  "identifier": "ski.djk.nexus-downloader",
  "mainBinaryName": "NexusDownloader",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Nexus Downloader",
        "width": 800,
        "height": 600,
        "minWidth": 640,
        "minHeight": 480
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
